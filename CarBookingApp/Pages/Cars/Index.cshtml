            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cars) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
