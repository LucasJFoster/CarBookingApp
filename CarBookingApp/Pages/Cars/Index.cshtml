@{
    ViewData["Title"] = "Index";
}

<h1>List Of Cars</h1>

<p>
    <a class="btn btn-primary" asp-page="Create"><i class="fa-solid fa-plus"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr> 
            @*<th>
                @Html.DisplayNameFor(model => model.Cars[0].Year)
